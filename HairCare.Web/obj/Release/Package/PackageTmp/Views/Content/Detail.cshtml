                            @if (Model.ContentTags != null) { 

                                foreach (var item in Model.ContentTags.Split(';')) {
                                <a href="@PathHelper.Search(item.TrimEnd().TrimStart())">@item.TrimStart().TrimEnd()</a><text>,</text>
